minikube and nagios where ur in the 
//nagios----
//minikube start
//minikube status
//kubectl create namespace nagioos
//inside the  dir of thie two nagios-deployment.yaml,nagios-service.yaml
//------nagios-deployment.yaml------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nagios
  namespace: monitoring
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nagios
  template:
    metadata:
      labels:
        app: nagios
    spec:
      containers:
      - name: nagios
        image: jasonrivers/nagios:latest
        ports:
        - containerPort: 80
//-----------------nagios-service.yaml-----------
apiVersion: v1
kind: Service
metadata:
  name: nagios-service
  namespace: monitoring
spec:
  type: NodePort
  selector:
    app: nagios
  ports:
  - port: 80
    targetPort: 80
    nodePort: 30080
//------------------inside this directory
//kubectl apply -f nagios-deployment.yaml
//kubectl apply -f nagios-service.yaml
//kubectl get pods -n monitoring
//to get url
//minikube service nagios-service -n monitoring --url

//minikube service nagios-service -n monitoring --url
